{
  "manifest_version": 3,
  "name": "ChaTab",
  "version": "1.1.0",
  "description": "Quickly submit queries to ChatGPT, Gemini, DeepSeek, Perplexity, Doubao, and more â€” all in one place.",
  "author": "ChaTab",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "action": {
    "default_icon": "icons/icon48.png",
    "default_title": "ChaTab"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.bing.com/*",
    "https://cn.bing.com/*",
    "https://www.bing.com/*",
    "https://api.bing.com/*",
    "https://images.unsplash.com/*",
    "https://chat.deepseek.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://www.doubao.com/*",
    "https://www.perplexity.ai/*",
    "https://www.kimi.com/*",
    "https://www.tongyi.com/*",
    "https://yuanbao.tencent.com/*",
    "https://grok.com/*",
    "https://yiyan.baidu.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.deepseek.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://www.doubao.com/chat/*",
        "https://www.perplexity.ai/*",
        "https://www.kimi.com/*",
        "https://www.tongyi.com/*",
        "https://yuanbao.tencent.com/*",
        "https://grok.com/*",
        "https://yiyan.baidu.com/*"
      ],
      "js": [
        "apps/constants.js",
        "apps/utils.js",
        "apps/BaseHandler.js",
        "apps/chatgpt.js",
        "apps/deepseek.js",
        "apps/gemini.js",
        "apps/doubao.js",
        "apps/perplexity.js",
        "apps/kimi.js",
        "apps/tongyi.js",
        "apps/yuanbao.js",
        "apps/grok.js",
        "apps/yiyan.js",
        "apps/HandlerFactory.js",
        "contentScript.js"
      ]
    }
  ]
} 