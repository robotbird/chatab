{
  "manifest_version": 3,
  "name": "chatab",
  "version": "1.0.0",
  "description": "Quick access to ChatGPT, DeepSeek, and other AI chat applications",
  "author": "ChatAB",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "action": {
    "default_icon": "icons/icon48.png",
    "default_title": "ChatAB"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://chat.deepseek.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.doubao.com/chat/*",
        "https://chat.deepseek.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["contentScript.js"]
    }
  ]
} 